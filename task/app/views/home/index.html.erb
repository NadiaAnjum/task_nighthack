<div class="jumbotron text-center">
    <h2>Welcome</h2>
</div>
<div class="form-row was-validated">
  <div class="col-2"></div>
  <div class="col-8">
    <div class="form-group">
      <label for="url">Enter URL:</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email", :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
      <div class="invalid-feedback">Please fill out this field.</div>
    </div>
    <%= button_to 'Save', sharks_path, :method => :get,  :class => "btn btn-primary"%>
  </div>
  <div class="col-2"></div>
</div>
