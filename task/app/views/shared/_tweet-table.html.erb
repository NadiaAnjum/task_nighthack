<ul>
  <% @tweets.each do |tweet| %>
    <li>
      <%= link_to "@#{User.find_by_id(tweet.user_id).username}", user_path(tweet.user_id) %>
      <%= tweet.body %>
      <small><%= tweet.created_at %></small>
      <%= link_to 'X', tweet_path(tweet), method: :delete, class: "btn" if current_user == tweet.user_id %>
    </li>
    <hr>
  <% end %>
</ul>
