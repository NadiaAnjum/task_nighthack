<div class="jumbotron text-center">
    <h2>Log in</h2>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-row was-validated">
    <div class="col-2"></div>
    <div class="col-8">
      <div class="form-group">
        <label for="email">Email:</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email", :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
        <div class="invalid-feedback">Please fill out this field.</div>
      </div>
      <div class="form-group">
        <label for="pwd">Password:</label>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "pwd", :required => true, minlength: 6 %>
        <div class="invalid-feedback">Please fill out this field.</div>
      </div>
      <div class="form-group">
        <%= render "devise/shared/links" %>
      </div>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
    <div class="col-2"></div>
  </div>
<% end %>
